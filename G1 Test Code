import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Welcome to the G1 Practice Test");
        System.out.println("1. Write the test");
        System.out.println("2. Login as admin");
        System.out.print("Choice: ");

                int choice = input.nextInt();
                input.nextLine();

                if (choice == 1) {
                    writeTest();
                } else if (choice == 2) {
                    adminLogin();
                } else {
                    System.out.println("Invalid choice.");
                }
            }
            public static void writeTest() {
                Scanner input = new Scanner(System.in);
                int score = 0;

                System.out.println("Question 1:");
                System.out.println("What does a red traffic light mean?");
                System.out.println("A) Stop");
                System.out.println("B) Go");
                System.out.println("C) Yield");
                System.out.println("D) Slow down");
                System.out.print("Your answer: ");
                String answer = input.nextLine();
                if (answer.equalsIgnoreCase("A")) {
                    System.out.println("Correct!");
                } else {
                    System.out.println("Incorrect.");
                }
                System.out.println();
                System.out.println("Question 2:");
                System.out.println("What should you do at a stop sign?");
                System.out.println("A) Slow down");
                System.out.println("B) Stop completely");
                System.out.println("C) Speed up");
                System.out.println("D) Honk");

                System.out.print("Your answer: ");
                answer = input.nextLine();

                if (answer.equalsIgnoreCase("B")) {
                    System.out.println("Correct!");
                    score++;
                } else {
                    System.out.println("Incorrect.");
                }
                System.out.println();
                System.out.println("Question 3:");
                System.out.println("What does a yellow traffic light mean?");
                System.out.println("A) Stop immediately");
                System.out.println("B) Speed up");
                System.out.println("C) Slow down and prepare to stop");
                System.out.println("D) Pedestrians may cross");

                System.out.print("Your answer: ");
                answer = input.nextLine();

                if (answer.equalsIgnoreCase("C")) {
                    System.out.println("Correct!");
                    score++;
                } else {
                    System.out.println("Incorrect.");
                }
                System.out.println();
                System.out.println("Question 4:");
                System.out.println("When should you use your turn signal?");
                System.out.println("A) Only on highways");
                System.out.println("B) When turning or changing lanes");
                System.out.println("C) Only at night");
                System.out.println("D) Only when other cars are near");

                System.out.print("Your answer: ");
                answer = input.nextLine();

                if (answer.equalsIgnoreCase("B")) {
                    System.out.println("Correct!");
                    score++;
                } else {
                    System.out.println("Incorrect.");
                }
                System.out.println();
                System.out.println("Test complete.");
                System.out.println("Your final score is: " + score + " out of 4");
                if (score >= 3) {
                    System.out.println("Status: PASS");
                } else {
                    System.out.println("Status: FAIL");
                }

            }

            public static void adminLogin() {

                System.out.println("Admin login selected.");
                    Scanner input = new Scanner(System.in);
                    System.out.print("Enter admin password: ");
                String ADMIN_PASSWORD = "yara123";
                    String password = input.nextLine();
                if (password.equals(ADMIN_PASSWORD)) {
                    System.out.println("Access granted.");
                    System.out.println("1. Add a question");
                    System.out.println("2. Remove a question");
                    System.out.print("Choice: ");
                    int adminChoice = input.nextInt();
                    input.nextLine();
                    if (adminChoice == 1) {
                        System.out.println("unfinished wip");
                    } else if (adminChoice == 2) {
                        System.out.println("wip");
                    }


                } else {
                    System.out.println("Wrong password.");
                }


            }

            }
